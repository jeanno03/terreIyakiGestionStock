<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
	<formset>
		<form name="/GererModifierProductComposant">
		<!-- Contraintes sur le champ "name" : obligatoire -->
		<field property="terreIyakiProductComposant" depends="required">

				<msg name="required" key="product.composant.terreIyakiProductComposant.error.required"
					bundle="productComposantGerer" />

			</field>
			
		<field property="statusComposant" depends="required">

				<msg name="required" key="product.composant.statusComposant.error.required"
					bundle="productComposantGerer" />

			</field>			

			

		</form>
	</formset>
</form-validation>