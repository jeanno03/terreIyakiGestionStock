<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
	<formset>
		<form name="/CreerConnectionUser">
			<!-- Contraintes sur le champ "login" : obligatoire -->
			<field property="login" depends="required">
				<msg name="required" key="connection.login.error.required"
					bundle="connectionMy" />
			</field>
			<!-- Contraintes sur le champ "mdp" : obligatoire -->
			<field property="mdp" depends="required">
				<msg name="required" key="connection.mdp.error.required"
					bundle="connectionMy" />
			</field>

		</form>
	</formset>
</form-validation>